<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tracking</title>
    <link rel="stylesheet" href="/css/tracking.css">
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet">
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css" rel="stylesheet">
    <style>
        /* Additional CSS if needed */
        .notification {
            display: none;
        }
        .back-button {
    position: absolute;
    top: 10px; /* Adjust this value as needed */
    left: 10px; /* Adjust this value as needed */
    z-index: 1000; /* Ensure it's above other content */
  }
    </style>
</head>
<body>
    <div class="back-button">
        <a href="javascript:history.back()" style="color: brown;"><i class="fas fa-arrow-left" style="color: brown;"></i> Back</a>
      </div>
    <video autoplay muted loop>
        <source src="/website_images/CompressedBackground.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="container">
        <!-- Notification Box -->
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info notification" role="alert" id="notification">
                    <strong>Success!</strong> Email has been sent.
                </div>
            </div>
        </div>
        
        <!-- Instructions -->
        <div class="row">
            <div class="alert alert-success col-md-12" role="alert" id="notes">
                <h4>NOTES</h4>
                <ul>
                    <li>You will receive an email on your mail after you registered. Press the link provided to confirm verification.</li>
                </ul>
            </div>
        </div>

        <!-- Verification Entry Jumbotron -->
        <div class="row">
            <div class="col-md-12">
                <div class="jumbotron text-center">
                    <h2 style="color: aliceblue;">Enter your email to verify</h2>
                    <form method="post" action="/sendverification" role="form">
                        <div class="col-md-9 col-sm-12">
                            <div class="form-group form-group-lg">
                                <input type="email" class="form-control col-md-6 col-sm-6 col-sm-offset-2" name="email" required placeholder="example@email.com">
                                <button class="btn btn-primary btn-lg col-md-2 col-sm-2" type="submit">Send</button>
                            </div>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
       
    </div>
    <script>
        // Function to check for query parameter in URL
        function getQueryParam(param) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(param);
        }

        // Check if emailSent is true
        window.onload = function() {
            const emailSent = getQueryParam('emailSent');
            if (emailSent === 'true') {
                document.getElementById('notification').style.display = 'block';
            }
        };
    </script>
</body>
</html>
